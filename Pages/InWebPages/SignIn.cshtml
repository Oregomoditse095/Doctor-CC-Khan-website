@page
@model Dr_CC_Khan.Pages.InWebPages.SignInModel
@{
    ViewData["Title"] = "Sign In page";
}

<style>
    h1 {
        color: #555555;
    }
</style>

<div class="text-center">
    <h1 class="display-4">Hey, Welcome Back.</h1><br /><br /><br />
    <form action="" method="POST">
        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Email: </label><br />
            <div class="col-sm-6">
                <input type="text" class="form-control" name="userEmail" value="" />
            </div>
        </div>

        <div class="row mb-3">
            <label class="col-sm-3 col-form-label">Password: </label><br />
            <div class="col-sm-6">
                <input type="password" class="form-control" name="userPassword" value="" />
            </div>
        </div>
        <br /><br />
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" name="login" style="background-color: #99CC00;">Login</button>
        </div>
    </form>
</div>